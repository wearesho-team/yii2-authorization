{
    "name": "wearesho-team/yii2-authorization",
    "description": "Redis Authorization Tokens for Yii2",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Letnikow",
            "email": "reclamme@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.6",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "require": {
        "php": "^7.1",
        "horat1us/yii2-environment-config": "^1.0",
        "nesbot/carbon": "^1.33",
        "ramsey/uuid": "^3.6",
        "yiisoft/yii2": "^2.0.15",
        "yiisoft/yii2-redis": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Wearesho\\Yii2\\Authorization\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wearesho\\Yii2\\Authorization\\Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 1800,
        "sort-packages": true,
        "platform": {
            "php": "7.1"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR2 ./src ./tests",
        "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
        "cover": "phpunit --coverage-clover=coverage.xml",
        "test": "phpunit",
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer lint",
                "composer test"
            ],
            "post-merge": "composer update --lock"
        }
    }
}
